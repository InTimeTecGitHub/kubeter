{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "ES6",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "types": [
            "node",
            "mocha"
        ]
    },
    "include": [
        "src"
    ]
}